<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kenshi.Plugins.MITM_GUI.PasswordSnifferActivity">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sniffToggleButton"
        android:text="@string/sniffToggleButton"
        android:textOff="@string/toggleButtonTextOff"
        android:textOn="@string/toggleButtonTextOn" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sniffProgress"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/sniffToggleButton"
        android:visibility="invisible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/separator"
        android:layout_below="@+id/sniffToggleButton"
        android:background="@android:color/darker_gray" />

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@id/sniffProgress"
        android:layout_below="@id/separator"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:indicatorLeft="?android:expandableListPreferredItemIndicatorLeft"
        android:id="@+id/expandableListView">

    </ExpandableListView>

</RelativeLayout>
