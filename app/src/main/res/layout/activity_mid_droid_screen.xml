<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context="com.mitdroid.kenshi.GUI.midDroidScreenActivity" >

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp"
                android:layout_row="0"
                android:layout_column="0">

                <Button
                    android:id="@+id/inputTarget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="28dp"
                    android:layout_marginTop="68dp"
                    android:onClick="inputTarget"
                    android:text="@string/getTarget"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="101dp" />

                <Button
                    android:id="@+id/mapNetwork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/inputTarget"
                    android:layout_marginStart="16dp"
                    android:text="@string/mapNetwork"
                    tools:layout_editor_absoluteX="191dp"
                    tools:layout_editor_absoluteY="101dp" />

                <TextView
                    android:id="@+id/scanResult"
                    android:layout_width="fill_parent"
                    android:layout_height="338dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/inputTarget"
                    android:layout_marginTop="56dp"
                    android:background="@color/black"
                    android:maxLines="1000"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="insideOverlay"
                    android:text="@string/scanResult"
                    android:textColor="@color/green" />

                <Button
                    android:id="@+id/showVulnerabilitiesButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:onClick="changeVulnerabilitiesDisplayScreen"
                    android:text="show vulnerabilities"
                    android:visibility="invisible" />

            </RelativeLayout>
        </GridLayout>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/navigationView"
        app:menu="@menu/navigation_items" >
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>